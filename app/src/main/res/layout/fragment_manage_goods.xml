<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="pl.edu.pjatk.s25819.przeterminarz.viewmodel.ManageGoodsViewModel" />
    </data>

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/manage_goods_goods_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa" />

            <EditText
                android:id="@+id/manage_goods_goods_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.goodsName}"
                android:hint="Nazwa produktu"
                android:inputType="text" />

            <TextView
                android:id="@+id/manage_goods_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kategoria" />

            <Spinner
                android:id="@+id/manage_goods_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectedCategory="@{viewModel.goodsCategory}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manage_goods_quantity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ilość" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <EditText
                android:id="@+id/manage_goods_quantity_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ilość produktu"
                android:inputType="number"
                android:visibility="gone"
                android:text="@={viewModel.goodsQuantity}"/>

            <TextView
                android:id="@+id/manage_goods_expiration_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data ważności" />

            <EditText
                android:id="@+id/manage_goods_expiration_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="Wybierz datę"
                android:inputType="date"
                android:text="@={viewModel.goodsExpirationDate}"/>

            <TextView
                android:id="@+id/manage_goods_image_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Obraz" />

            <ImageView
                android:id="@+id/manage_goods_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Obraz produktu"
                app:imageThumbnail="@{viewModel.goodsImageThumbnail}" />

            <Button
                android:id="@+id/manage_goods_pick_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/manage_goods_pick_image_label"
                tools:text="@string/manage_goods_pick_image_label" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/manage_goods_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                tools:text="Zapisz" />

        </LinearLayout>
    </ScrollView>
</layout>
